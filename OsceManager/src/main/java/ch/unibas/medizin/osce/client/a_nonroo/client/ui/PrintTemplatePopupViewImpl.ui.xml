<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.google.gwt.user.cellview.client"
	xmlns:my="urn:import:ch.unibas.medizin.osce.client.style.widgets"
	xmlns:r="urn:import:ch.unibas.medizin.osce.client.style.widgets.richtext"
	xmlns:c="urn:import:com.google.appengine.repackaged.com.google.common.collect">

	<ui:style src="../styles.css">
		.panelStyle {
			width: 320px;
			height: 400px;
			border-width: thin;
			border-style: solid;
			padding: 0px;
			margin-top: 10px;
			margin-bottom: 5px;
			margin-left: 50px;
			-moz-border-radius: 4px;
		}
		
		.noOutline {
			outline-style: none;
			overflow: hidden;
		}
		
		.padleft5 {
			padding-left: 5px;
		}
		
		.standardTable input {
			width: 100%;
			opacity: 0.8;
		}
		
		.icon {
			float: right;
			margin: 4px;
			vertical-align: middle;
		}
		
		.icon:hover {
			cursor: pointer;
		}
		
		.maxWidth {
			margin-bottom: 8px;
			width: 680px;
		}
		
		.right {
			float: right;
		}
		
		.paddRight {
			float: right;
		}
		
		.left {
			float: left;
		}
		
		.popupStyle {
			width: 1040px;
			height: 640px;
			border-width: 2px;
			border-color: #676767;
			border-style: solid;
			border-radius: 10px;
		}
		
		.buttonStyle {
			margin-top: 6px;
			margin-right: 10px;
			width: 140px;
		}
		
		.contentPanelStyle {
			padding: 0px;
			margin: 20px;
			-moz-border-radius: 4px;
		}
		
		.toolbar {
			border: 0px solid #AAA;
			padding: 0px;
			margin-bottom: 5px;
		}
		
		.closeButton {
			position: absolute;
			top: -10px;
			right: -10px;
			border-radius: 7px;
			border-color: #676767;
			border-width: 2px;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.popupStyle}">
		<div
			style="height: 20px;
					padding: 10px;
					background-color: #D2AE50;
					font-size: x-large;
					font-family: sans-serif;
					vertical-align: middle; 
					color: black;">
			Print Template

			<my:IconButton ui:field="closeButton" icon="close"
				addStyleNames="{style.closeButton}"></my:IconButton>


		</div>
		<g:HTMLPanel addStyleNames="{style.contentPanelStyle}">


			<r:RichTextToolbar ui:field="messageToolbar"
				addStyleNames="{style.toolbar}" />
			<div style="margin-bottom: 7px;">
				<g:ListBox ui:field="osceList" addStyleNames="{style.buttonStyle}"></g:ListBox>
				<g:Button ui:field="loadTemplateButton" addStyleNames="{style.buttonStyle}">Load
					Template</g:Button>
			</div>

			<div
				style="-moz-border-radius-bottomleft: 8px;
				-moz-border-radius-bottomright: 8px; 
   				border: 1px solid #AAA; 
   				padding: 4px">
				<g:RichTextArea height="280px" ui:field="message" />
			</div>
			<div>
				<!-- <g:Button ui:field="sendMailButton" addStyleNames="{style.buttonStyle}" 
					>Mail</g:Button> -->
				<g:Button ui:field="saveTemplateButton" addStyleNames="{style.buttonStyle}">Save
					Template</g:Button>		
				<g:Button ui:field="printTemplateButton" addStyleNames="{style.buttonStyle}">Print
					Template</g:Button>		
				<g:Button ui:field="restoreTemplateButton" addStyleNames="{style.buttonStyle}">Restore
					Template</g:Button>
			</div>
			<div>

				<h4 style="color: orange;">Please do not change or remove following parameters.</h4>

				<table>
					<tr>
						<td>[TITLE]</td>
						<td>= Title Name</td>
						<td>[NAME]</td>
						<td>= Full Name</td>
						<td>[PRENAME]</td>
						<td>= Surname</td>
						<td>[DATE]</td>
						<td>= Date of Exam</td>
					</tr>
					<tr>
						<td>[START TIME]</td>
						<td>= Assignment Start Time</td>
						<td>[END TIME]</td>
						<td>= Assignment End Time</td>
						<td>[OSCE]</td>
						<td>= OSCE Assigned</td>
						<td>[ROLE]</td>
						<td>= Role Assigned</td>
					</tr>
					<tr>
						<td>[POST]</td>
						<td>= Post Name</td>
						<td>[ROOM]</td>
						<td>= Room Number</td>
						<td>[LONG BREAK]</td>
						<td>= Long Break</td>
						<td>[LUNCH BREAK]</td>
						<td>= Lunch Number</td>
					</tr>
					<tr>
					<td></td>
					</tr>
					<tr>
						<td>[TITLE SEPARATOR]</td>
						<td>[OSCE_DAY SEPARATOR]</td>
						<td>[SCHEDULE SEPARATOR]</td>
						<td>[BREAK SEPARATOR]</td>
						<td>[SCRIPT SEPARATOR]</td>
					</tr>
				</table>
			</div>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder> 