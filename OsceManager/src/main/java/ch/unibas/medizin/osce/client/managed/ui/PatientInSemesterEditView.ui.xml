<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:ch.unibas.medizin.osce.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:ch.unibas.medizin.osce.client.scaffold.ui">

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class="{style.underline}">    
      <h3 class="{style.header}" ui:field="editTitle">
        <ui:msg>Edit PatientInSemester</ui:msg>
      </h3>
      <h3 class="{style.header}" ui:field="createTitle">
                <ui:msg>New PatientInSemester</ui:msg>
            </h3>
    </div>
    <div class="{style.errors}" ui:field="errors"/>

    <table class="{style.fields}" id="boundElementHolder">
      
      
    <tr id="semester">
                <td>
                    <div class="{style.label}">Semester:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="semester"/>
                </td>
            </tr>
            <tr id="standardizedPatient">
                <td>
                    <div class="{style.label}">Standardized Patient:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="standardizedPatient"/>
                </td>
            </tr>
            <tr id="accepted">
                <td>
                    <div class="{style.label}">Accepted:</div>
                </td>
                <td>
                    <g:CheckBox ui:field="accepted"/>
                </td>
            </tr>
            <tr id="osceDays">
                <td>
                    <div class="{style.label}">Osce Days:</div>
                </td>
                <td>
                    <a:OsceDaySetEditor ui:field="osceDays"/>
                </td>
            </tr>
            <tr id="patientInRole">
                <td>
                    <div class="{style.label}">Patient In Role:</div>
                </td>
                <td>
                    <a:PatientInRoleSetEditor ui:field="patientInRole"/>
                </td>
            </tr>
            <tr id="trainings">
                <td>
                    <div class="{style.label}">Trainings:</div>
                </td>
                <td>
                    <a:TrainingSetEditor ui:field="trainings"/>
                </td>
            </tr>
        </table>

    <div class="{style.bar}">
      <g:Button addStyleNames="{style.button}" ui:field="save">Save</g:Button>
      <g:Button addStyleNames="{style.button}" ui:field="cancel">Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
