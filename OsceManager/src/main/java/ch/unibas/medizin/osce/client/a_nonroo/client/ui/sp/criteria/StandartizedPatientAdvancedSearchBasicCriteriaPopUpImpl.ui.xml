<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:ch.unibas.medizin.osce.client.style.widgets">
	<ui:style src="../../../styles.css">
	.width20 {
		width: 20px;
	}
	</ui:style>

	<g:HorizontalPanel ui:field="parentPanel" spacing="4">
		<g:ValueListBox ui:field="bindType"></g:ValueListBox>
		<g:ValueListBox ui:field="field" />
		<g:ValueListBox ui:field="comparison" />
		<g:TextBox ui:field="value" addStyleNames="{style.width20}"></g:TextBox>
		<g:Label ui:field="unit" />
		<g:Label ui:field="valueNotAvail" />
		<my:IconButton ui:field="addAdvSeaBasicButton" icon="plusthick" />
		<my:IconButton ui:field="closeBoxButton" icon="closethick"></my:IconButton>
	</g:HorizontalPanel>
</ui:UiBinder>