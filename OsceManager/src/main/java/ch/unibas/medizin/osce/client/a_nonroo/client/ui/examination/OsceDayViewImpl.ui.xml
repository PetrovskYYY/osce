<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.google.gwt.user.cellview.client"
	 xmlns:my="urn:import:ch.unibas.medizin.osce.client.style.widgets" 
	 xmlns:e="urn:import:ch.unibas.medizin.osce.client.a_nonroo.client.ui.examination" xmlns:d="urn:import:com.google.gwt.user.datepicker.client">
	 <ui:style src="../../styles.css" >
	
	.margin50
	{
		margin-left: 50px;
	}
	.margin19
	{
		margin-left: 19px;
	}
	.margin79{
		margin-left: 99px;
	}
	.spacing10
	{
		padding: 5px;
		padding-top: 5px;
	}		
		
	</ui:style>
	<g:HTMLPanel>
	<!--h1>Osce Day</h1-->
		<!-- Module 5 Bug Report Solution -->
		<!-- <g:HTMLPanel styleName="{style.patientTopContainer}" height="350px" width="250px"> -->
		<g:HTMLPanel ui:field="mainDayHP" styleName="{style.patientTopContainer}" height="380px" width="250px">
			<!-- Module 5 Bug Report Solution -->
			<g:HorizontalPanel horizontalAlignment="center" width="250px">
				 <g:Label ui:field="dayLabel" />				 
			 </g:HorizontalPanel>
			 
			<g:Label ui:field="presentsLabel"/>
			<g:VerticalPanel ui:field="dayContentVerticalPanel" width="250px" spacing="2">
				<g:HorizontalPanel spacing="2">
					<g:Label ui:field="dateLabel" styleName="{style.spacing10}"></g:Label>
					<d:DateBox ui:field="dateTextBox" styleName="{style.margin50}"></d:DateBox>
				</g:HorizontalPanel>
				
				<g:HorizontalPanel spacing="2">
					<g:Label ui:field="startTimeLable" styleName="{style.spacing10}"></g:Label>
					<g:TextBox ui:field="startTimeTextBox" styleName="{style.margin19}"></g:TextBox>
				</g:HorizontalPanel>
				
				<g:HorizontalPanel spacing="2">
					<g:Label ui:field="endTimeLable" />
					<g:TextBox ui:field="endTimeTextBox"></g:TextBox>
				</g:HorizontalPanel>
				
				<g:VerticalPanel ui:field="calculationVPanel">	
					<g:Label ui:field="calculationsLabel" />
					<g:Label ui:field="lunchBreakLabel" />
					<g:HorizontalPanel>
						<g:Label ui:field="lunchBreakStartLabel" />
						<g:Label ui:field="lunchBreakStartValueLabel" />
					</g:HorizontalPanel>
					<g:Label ui:field="lbEndTimeLabel" />
					<g:Label ui:field="studentsLabel" />											
					<g:VerticalPanel horizontalAlignment="center" ui:field="saveVPanel">
						<my:IconButton ui:field="saveOsceDayValue" icon="disk" />
					</g:VerticalPanel>
				</g:VerticalPanel>
				
				<!-- Module 5 Bug Report Solution -->
				<g:HorizontalPanel spacing="7" ui:field="scheduleHP">
					<my:IconButton ui:field="btnScheduleEarlier" icon=" triangle-1-n"></my:IconButton>
					<my:IconButton ui:field="btnSchedulePostpone" icon="triangle-1-s"></my:IconButton>			
				</g:HorizontalPanel>
				<!-- E Module 5 Bug Report Solution -->						
			</g:VerticalPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 