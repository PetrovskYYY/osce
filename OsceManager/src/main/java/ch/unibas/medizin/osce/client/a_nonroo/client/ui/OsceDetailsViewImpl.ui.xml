<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:ch.unibas.medizin.osce.client.style.widgets">
	<ui:style src="../styles.css" />
		
	<g:HTMLPanel>
		<div class="{style.underline}">
			<h3 class="{style.header}">
				<ui:msg>
					<span ui:field="displayRenderer" />
				</ui:msg>
			</h3>
		</div>

		<table class="{style.fields}" id="boundElementHolder">
			<tr id="id">
				<td>
					<span class="{style.label}">Id:</span>
				</td>
				<td>
					<span ui:field="id" />
				</td>
			</tr>
			<tr id="version">
				<td>
					<span class="{style.label}">Version:</span>
				</td>
				<td>
					<span ui:field="version" />
				</td>
			</tr>
			<tr id="maxStud">
				<td>
					<span class="{style.label}">max. Studenten:</span>
				</td>
				<td>
					<span ui:field="maxStud" />
				</td>
			</tr>
			<tr id="maxParcours">
				<td>
					<span class="{style.label}">max. Parcours:</span>
				</td>
				<td>
					<span ui:field="maxParcours" />
				</td>
			</tr>
			<tr id="postLength">
				<td>
					<span class="{style.label}">Postenl√§nge:</span>
				</td>
				<td>
					<span ui:field="postLength" />
				</td>
			</tr>
		</table>

		<div class="{style.bar}">
			<my:IconButton icon="pencil" addStyleNames="{style.button}" ui:field="edit">Edit</my:IconButton>
			<my:IconButton icon="closethick" addStyleNames="{style.button}" ui:field="delete">Delete</my:IconButton>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 