<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:my="urn:import:ch.unibas.medizin.osce.client.style.widgets">
<ui:style src="../styles.css" />

  <g:HTMLPanel>
     <div class="{style.underline}">
      <h3 class="{style.header}">
                <ui:msg>
                    <span ui:field="displayRenderer"/>
                </ui:msg>
            </h3>
    </div>

    <table class="{style.fields}" id="boundElementHolder">
      <tr id="id">
                <td>
                    <span class="{style.label}">Id:</span>
                </td>
                <td>
                    <span ui:field="id"/>
                </td>
            </tr>
      <tr id="version">
                <td>
                    <span class="{style.label}">Version:</span>
                </td>
                <td>
                    <span ui:field="version"/>
                </td>
            </tr>
      <tr id="name">
                <td>
                    <span class="{style.label}">Name:</span>
                </td>
                <td>
                    <span ui:field="name"/>
                </td>
            </tr>
      <tr id="preName">
                <td>
                    <span class="{style.label}">Pre Name:</span>
                </td>
                <td>
                    <span ui:field="preName"/>
                </td>
            </tr>
      <tr id="email">
                <td>
                    <span class="{style.label}">Email:</span>
                </td>
                <td>
                    <span ui:field="email"/>
                </td>
            </tr>
      <tr id="responsibilities">
                <td>
                    <span class="{style.label}">Responsibilities:</span>
                </td>
                <td>
                    <span ui:field="responsibilities"/>
                </td>
            </tr>
    </table>

  <div class="{style.bar}">
    <my:IconButton icon="pencil" addStyleNames="{style.button}" ui:field="edit">Edit</my:IconButton>
    <my:IconButton icon="trash" addStyleNames="{style.button}" ui:field="delete">Delete</my:IconButton>
   </div>
	</g:HTMLPanel>
</ui:UiBinder> 