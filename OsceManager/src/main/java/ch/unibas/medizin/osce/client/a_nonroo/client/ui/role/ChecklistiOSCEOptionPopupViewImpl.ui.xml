<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:ch.unibas.medizin.osce.client.style.widgets">
	<ui:style src="../../styles.css" >
		
	</ui:style>
	
	
	
	<g:VerticalPanel spacing="3">
		<g:HorizontalPanel spacing="3" verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="name" width="85px"></g:Label>
			<g:TextBox ui:field="nameTextBox" width="180px"></g:TextBox>
		</g:HorizontalPanel>
		
		<g:HorizontalPanel spacing="3" verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="description" width="85px"></g:Label>
			<g:TextArea ui:field="descriptionTextArea"></g:TextArea>
		</g:HorizontalPanel>
		
		<g:HorizontalPanel ui:field="valueHpPanel" spacing="3" verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="value" width="85px"></g:Label>
			<g:TextBox ui:field="valueTextBox" width="180px"></g:TextBox>
		</g:HorizontalPanel>
		
		<g:HorizontalPanel ui:field="criteriaCountHpPanel" spacing="3" verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="criteriaCount" width="85px"></g:Label>
			<g:ListBox ui:field="criteriaCountBox" width="185px"></g:ListBox>
		</g:HorizontalPanel>
		
		<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
			<g:HorizontalPanel spacing="3">
				<s:IconButton ui:field="saveBtn" icon="disk"></s:IconButton>
				<s:IconButton ui:field="cancelBtn" icon="closethick"></s:IconButton>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 