<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:ch.unibas.medizin.osce.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:ch.unibas.medizin.osce.client.scaffold.ui">
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName="{style.outer}">
    <div class="{style.error}" ui:field="errors"/>
    
    <div id="numberRotation">
            <div class="{style.label}">Number Rotation</div>
            <div class="{style.value}">
                <g:IntegerBox ui:field="numberRotation"/>
            </div>
        </div>
    <div id="label">
            <div class="{style.label}">Label</div>
            <div class="{style.value}">
                <g:TextBox ui:field="label"/>
            </div>
        </div>
    <div id="osceDay">
            <div class="{style.label}">Osce Day</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="osceDay"/>
            </div>
        </div>
    <div id="courses">
            <div class="{style.label}">Courses</div>
            <div class="{style.value}">
                <a:CourseSetEditor ui:field="courses"/>
            </div>
        </div>
    <div id="oscePosts">
            <div class="{style.label}">Osce Posts</div>
            <div class="{style.value}">
                <a:OscePostSetEditor ui:field="oscePosts"/>
            </div>
        </div>

    <g:Button ui:field="save">Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
