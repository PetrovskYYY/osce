<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:ch.unibas.medizin.osce.client.style.widgets">
	
	<ui:with type="ch.unibas.medizin.osce.shared.i18n.OsceConstants" field="constants"></ui:with>
	
	<ui:style src="../../styles.css">
	.monthLblStyle{
		font-weight: bold;
	}
	.buttonWidth{
		width: 97%;
		margin:6% 0;
	}
	</ui:style>
	<g:HTMLPanel ui:field="mainHtmlPanel">
		<g:VerticalPanel width="100%" ui:field="buttonPanel" spacing="3">
				<s:IconButton ui:field="proposeTrainigDays" text="{constants.proposeTrainingDays}" icon="script" addStyleNames="{style.buttonWidth}"></s:IconButton>
				<s:IconButton ui:field="proposeOsceDays" text="{constants.proposeOsceDays}" icon="script" addStyleNames="{style.buttonWidth}"></s:IconButton>
		</g:VerticalPanel>
	</g:HTMLPanel>	
</ui:UiBinder> 