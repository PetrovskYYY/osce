<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:ch.unibas.medizin.osce.client.scaffold.ui" xmlns:my="urn:import:ch.unibas.medizin.osce.client.style.widgets">
	<ui:style src="../../styles.css">
		.label {
			/* text-align: right; */
		}
		
		.buttonStyle {
			width: 100px;
		}
		
		.textBoxFieldStyle {
			text-align: center;
    		width: 22px;
		}
		
		.tableclass td {
			padding-right: 20px;
		}
		
	</ui:style>
	
	<g:HTMLPanel>
		<table class="tableclass">
			<tr>
				<td>
					<g:Label ui:field="shortBreakLabel" styleName="{style.label}"></g:Label>
				</td>
				<td>
					<s:ShortBox ui:field="shortBreakTextBox" styleName="{style.textBoxFieldStyle}"></s:ShortBox>
				</td>
				<td>
					<g:Label ui:field="longBreakLabel" styleName="{style.label}"></g:Label>
				</td>
				<td>
					<s:ShortBox ui:field="longBreakTextBox" styleName="{style.textBoxFieldStyle}"></s:ShortBox>
				</td>
				<td>
					<g:Label ui:field="launchBreakLabel" styleName="{style.label}"></g:Label>
				</td>
				<td>
					<s:ShortBox ui:field="launchBreakTextBox" styleName="{style.textBoxFieldStyle}"></s:ShortBox>
				</td>				
				<td>
					<g:Label ui:field="middleBreakLabel" styleName="{style.label}"></g:Label>
				</td>
				<td>
					<s:ShortBox ui:field="middleBreakTextBox" styleName="{style.textBoxFieldStyle}"></s:ShortBox>
				</td>
				<td>
					<g:HorizontalPanel spacing="4">
						<my:IconButton ui:field="saveOsce" addStyleNames="{style.buttonStyle}" icon="disk"></my:IconButton>
					</g:HorizontalPanel>								
				</td>
			</tr>
			
			<tr>
				<td>
					<g:Label ui:field="maxStudentLabel"  styleName="{style.label}"></g:Label>
				</td>
				<td>
					<g:IntegerBox ui:field="maxStudentTextBox" styleName="{style.textBoxFieldStyle}"></g:IntegerBox>
				</td>
				<td>
					<g:Label ui:field="maxParcourLabel" styleName="{style.label}"></g:Label>
				</td>
				<td>
					<g:IntegerBox ui:field="maxParcourTextBox" styleName="{style.textBoxFieldStyle}"></g:IntegerBox>
				</td>
				<td>
					<g:Label ui:field="maxRoomsLabel" styleName="{style.label}"></g:Label>
				</td>
				<td>
					<g:IntegerBox ui:field="maxRoomsTextBox" styleName="{style.textBoxFieldStyle}"></g:IntegerBox>
				</td>
				<td>
					<g:Label ui:field="shortBreakSimpatLabel" styleName="{style.label}"></g:Label>
				</td>
				<td>
					<s:ShortBox ui:field="shortBreakSimpatTextBox" styleName="{style.textBoxFieldStyle}"></s:ShortBox>
				</td>
				<td>
					<g:HorizontalPanel spacing="4">
						<my:IconButton ui:field="calculateBtn" addStyleNames="{style.buttonStyle}" icon="calculator"></my:IconButton>
						<my:IconButton ui:field="fixedBtn" addStyleNames="{style.buttonStyle}" icon="pin-s"></my:IconButton>				
						<my:IconButton ui:field="clearAllBtn" addStyleNames="{style.buttonStyle}" icon="cancel"></my:IconButton>
						<my:IconButton ui:field="reopenBtn" addStyleNames="{style.buttonStyle}" icon="folder-open"></my:IconButton>
						<my:IconButton ui:field="closedBtn" addStyleNames="{style.buttonStyle}" icon="close"></my:IconButton>						
					</g:HorizontalPanel>
				</td>			
			</tr>									
		</table>
	</g:HTMLPanel>
	
</ui:UiBinder> 