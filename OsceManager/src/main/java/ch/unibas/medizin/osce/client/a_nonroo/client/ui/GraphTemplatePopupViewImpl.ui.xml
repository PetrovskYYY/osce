<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.google.gwt.user.cellview.client"
	xmlns:my="urn:import:ch.unibas.medizin.osce.client.style.widgets"
	xmlns:r="urn:import:ch.unibas.medizin.osce.client.style.widgets.richtext"
	xmlns:c="urn:import:com.google.appengine.repackaged.com.google.common.collect">

	<ui:style src="../styles.css">
		.panelStyle {
			width: 320px;
			height: 400px;
			border-width: thin;
			border-style: solid;
			padding: 0px;
			margin-top: 10px;
			margin-bottom: 5px;
			margin-left: 50px;
			-moz-border-radius: 4px;
		}
		
		.noOutline {
			outline-style: none;
			overflow: hidden;
		}
		
		.padleft5 {
			padding-left: 5px;
		}
		
		.standardTable input {
			width: 100%;
			opacity: 0.8;
		}
		
		.icon {
			float: right;
			margin: 4px;
			vertical-align: middle;
		}
		
		.icon:hover {
			cursor: pointer;
		}
		
		.maxWidth {
			margin-bottom: 8px;
			width: 680px;
		}
		
		.right {
			float: right;
		}
		
		.paddRight {
			float: right;
		}
		
		.left {
			float: left;
		}
		
		.popupStyle {
			width: 550px;
			height: 550px;
			border-width: 2px;
			border-color: #676767;
			border-style: solid;
			border-radius: 10px;
		}
		
		.buttonStyle {
			margin-top: 6px;
			margin-right: 10px;
			width: 140px;
		}
		
		.contentPanelStyle {
			padding: 0px;
			margin: 20px;
			-moz-border-radius: 4px; 
			
		}
		
		.toolbar {
			border: 0px solid #AAA;
			padding: 0px;
			margin-bottom: 5px;
		}
		
		.closeButton {
			position: absolute;
			top: -10px;
			right: -10px;
			border-radius: 7px;
			border-color: #676767;
			border-width: 2px;
			font-size: small;
		}
		
		.errorLbl{
			padding-top: 15px;
			font-size: 25px;;
			font-weight: bold;
		}	
		
		.imgLbl{
			font-size: 25px;;
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.popupStyle}">
		<div
			style="height: 20px;
					padding: 10px;
					background-color: #D2AE50;
					font-size: x-large;
					font-family: sans-serif;
					vertical-align: middle; 
					color: black;">
			<span ui:field="popupTitle"></span>

			<my:IconButton ui:field="closeButton" icon="closethick"
				addStyleNames="{style.closeButton}"></my:IconButton>


		</div>
		<g:HTMLPanel addStyleNames="{style.contentPanelStyle}">
			<g:VerticalPanel>
				<g:Image ui:field="graphImage" visible="false" addStyleNames="{style.imgLbl}"></g:Image>
				<!-- <g:Label ui:field="imgErrorLbl" visible="false" addStyleNames="{style.errorLbl}"></g:Label> -->
			</g:VerticalPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder> 