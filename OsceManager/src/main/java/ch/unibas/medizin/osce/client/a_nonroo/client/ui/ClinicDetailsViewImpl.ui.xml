<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
 <ui:style src="../styles.css" />

  <g:HTMLPanel>
    <div class="{style.underline}">
      <h3 class="{style.header}">
                <ui:msg>
                    <span ui:field="displayRenderer"/>
                </ui:msg>
            </h3>
    </div>

    <table class="{style.fields}" id="boundElementHolder">
      <tr id="id">
                <td>
                    <span class="{style.label}">Id:</span>
                </td>
                <td>
                    <span ui:field="id"/>
                </td>
            </tr>
      <tr id="version">
                <td>
                    <span class="{style.label}">Version:</span>
                </td>
                <td>
                    <span ui:field="version"/>
                </td>
            </tr>
      <tr id="name">
                <td>
                    <span class="{style.label}">Name:</span>
                </td>
                <td>
                    <span ui:field="name"/>
                </td>
            </tr>
      <tr id="street">
                <td>
                    <span class="{style.label}">Street:</span>
                </td>
                <td>
                    <span ui:field="street"/>
                </td>
            </tr>
      <tr id="city">
                <td>
                    <span class="{style.label}">City:</span>
                </td>
                <td>
                    <span ui:field="city"/>
                </td>
            </tr>
      <tr id="postalCode">
                <td>
                    <span class="{style.label}">Postal Code:</span>
                </td>
                <td>
                    <span ui:field="postalCode"/>
                </td>
            </tr>
      <tr id="doctors">
                <td>
                    <span class="{style.label}">Doctors:</span>
                </td>
                <td>
                    <span ui:field="doctors"/>
                </td>
            </tr>
    </table>

  <div class="{style.bar}">
    <g:Button addStyleNames="{style.button}" ui:field="edit">Edit</g:Button>
    <g:Button addStyleNames="{style.button}" ui:field="delete">Delete</g:Button>
<!--     <g:Anchor ui:field="delete">Delete</g:Anchor> -->
   </div>
  </g:HTMLPanel>
</ui:UiBinder>
