<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:ch.unibas.medizin.osce.client.style.widgets"
	xmlns:n="urn:import:ch.unibas.medizin.osce.client.a_nonroo.client.ui.roleAssignment"
	xmlns:b="urn:import:com.google.gwt.user.cellview.client">
	<ui:style src="../../styles.css">
		.cellTableEvenYesRow {
			width: 500px;
			min-height: 26px;
			margin: 4px auto;
		}
		
		.cellTableEvenRow {
			background: #ffffff;
		}
		.alignment{
		padding-bottom: 10px;

		}
	</ui:style>

	<g:SplitLayoutPanel ui:field="splitLayoutPanel">
		<g:west size="400">
			<g:ScrollPanel>
				<g:VerticalPanel spacing="5">
				<g:HorizontalPanel spacing="8" verticalAlignment="middle">
					<my:IconButton icon="arrowthickstop-1-s" ui:field="surveyImpBtn"></my:IconButton>
					<my:IconButton ui:field="getImpBtn" icon="extlink"/>
					<my:QuickSearchBox ui:field="searchBox"></my:QuickSearchBox>
					<!-- <my:QuickSearchBox ui:field="searchBox" /> -->
					<g:CheckBox ui:field="ignoreOsceDaycheckBox" width="30px" height="200px"></g:CheckBox>
					<g:Label ui:field="ignoreOsceDaycheckBoxLabel"></g:Label>
				</g:HorizontalPanel>
					<g:HTMLPanel>
						<div class="{style.cellTableEvenYesRow}">
							<n:PatientInSemesterFlexTable
								ui:field="table"></n:PatientInSemesterFlexTable>
						</div>
					</g:HTMLPanel>
					<g:HorizontalPanel spacing="4">

						<my:IconButton icon="gear" ui:field="autoAssignmentBtn"></my:IconButton>
						<my:IconButton icon="plusthick" ui:field="addManuallyBtn"></my:IconButton>
						<my:IconButton icon="arrowrefresh-1-w" ui:field="clearSelectionBtn"></my:IconButton>
					</g:HorizontalPanel>
					<!-- Module 3 Start -->
					<g:VerticalPanel spacing="5">
						<b:CellTable pageSize="8" ui:field="advancedSearchCriteriaTable"
							width="500px" addStyleNames="{style.standardTable}" />
						<g:HTMLPanel>
							<div class="{style.controls}">
								<b:SimplePager ui:field="pager"
									display="{advancedSearchCriteriaTable}" />
							</div>
						</g:HTMLPanel>
					</g:VerticalPanel>
					<!-- Module 3 End -->
				</g:VerticalPanel>

			</g:ScrollPanel>
		</g:west>
		<g:center>
			<g:ScrollPanel>
				<g:SimplePanel ui:field="detailsPanel">
					<g:HTMLPanel>
						<!-- Module 3 { -->
						<g:VerticalPanel ui:field="osceDaySubViewContainerPanel">
							<!-- r:OsceDaySubViewImpl ui:field="osceDaySubViewImpl"></r:OsceDaySubViewImpl -->
						</g:VerticalPanel>
						<!-- Module 3 } -->

					</g:HTMLPanel>
				</g:SimplePanel>
			</g:ScrollPanel>
		</g:center>
	</g:SplitLayoutPanel>
</ui:UiBinder> 