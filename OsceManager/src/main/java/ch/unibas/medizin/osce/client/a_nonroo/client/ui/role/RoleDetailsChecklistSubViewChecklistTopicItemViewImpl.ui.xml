<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:ch.unibas.medizin.osce.client.scaffold.ui'
  xmlns:a='urn:import:ch.unibas.medizin.osce.client.managed.ui'
  xmlns:my='urn:import:ch.unibas.medizin.osce.client.style.widgets'
  xmlns:b='urn:import:com.google.gwt.user.cellview.client'
  xmlns:n='urn:import:ch.unibas.medizin.osce.client.a_nonroo.client.ui.role'>

<ui:style src="../../styles.css" >
.lableHeader
	{
		font-size: 15px;
	}
.noOutline {
		outline-style: none;
		overflow: hidden;	
	}
.padleft5
	{
		padding-left: 3px;
		padding-right: 8px;
	}
	.standardTable input {
		width: 90%;
		opacity: 0.8;
	}
	
	.borderDP{
	
	border: 10;
	
}
			.exp{
	
background-color:#B8A9A2;

}
			.expbtn{
	background-color:#DFDAD6;
	border-style: solid;
	border-top-width: 1px;
	border-right-width: 1px;
	border-bottom-width: 1px;
	border-left-width: 1px; 
	border-radius: 10px 10px 10px 10px;
	height: 25px;
	cursor: pointer;
	}
	
	.expbtn:hover{
		background-color: #A09286;
	}

	.icon
	{
		float: left;
		margin: 3px;
	}
	
	.icon:hover {
		cursor: pointer;
	}
	
	.maxWidth {
		margin-bottom: 8px;
		width: 100%;
	}
	
	
	
	.marginQue{
	margin-left:9px;
	margin-right:9px;
	}
</ui:style>

 <ui:with type="ch.unibas.medizin.osce.client.style.resources.UiIcons" field="uiIcons"></ui:with>	
<g:HTMLPanel width="100%">

		
		<g:VerticalPanel ui:field="topicsdiscloserVP" verticalAlignment="middle">
			<g:VerticalPanel addStyleNames="{style.tabStyle} {style.patientTopContainer} {style.maxWidth}" ui:field="discloserVP">
		

		<g:HorizontalPanel styleName="{style.patientControls}   {style.maxWidth} {style.exp}" >
			<g:HorizontalPanel width="10px">
			<g:Image ui:field="arrow" styleName="{style.padleft5}" url="/osMaEntry/gwt/unibas/images/arrowdownselect.png"></g:Image>
			</g:HorizontalPanel>
			<g:VerticalPanel>
				<g:Label  addStyleNames="{style.label} {style.lableHeader}" ui:field="checkListTopicLbl" width="550px"> </g:Label>
				<g:Label  addStyleNames="{style.label}" ui:field="descriptionLbl" ></g:Label>
			</g:VerticalPanel>
			<g:HTMLPanel>
				<div  class="{style.controlsright}">
					<h3 class="{style.header}" style="display:inline"><span ui:field="displayRenderer"></span></h3>								
					<g:HorizontalPanel width="90%"  >
					<my:IconButton  ui:field="delete" icon="trash"></my:IconButton>
					<my:IconButton  ui:field="edit" icon="pencil"></my:IconButton>
					
					<g:Image ui:field="down" styleName="{style.icon}" resource="{uiIcons.triangle1South}"></g:Image>
					<g:Image ui:field="up" styleName="{style.icon}  " resource="{uiIcons.triangle1North}"></g:Image>
					</g:HorizontalPanel>
					</div>
			</g:HTMLPanel>
		</g:HorizontalPanel>

		<g:AbsolutePanel ui:field="topicAP">
	<g:DisclosurePanel  animationEnabled="true" open="true" styleName="{style.borderDP} {style.maxWidth} " ui:field="checkListTopicDisclosurePanel"   >
	

	<g:AbsolutePanel ui:field="queAP" >

	<g:HorizontalPanel  spacing="4" styleName="{style.marginQue}">

	<g:VerticalPanel ui:field="checkListQuestionVerticalPanel" spacing="5">
	</g:VerticalPanel>


	</g:HorizontalPanel>
	</g:AbsolutePanel>
	
	</g:DisclosurePanel>
	</g:AbsolutePanel>
	
	<g:HorizontalPanel  borderWidth="0" spacing="5">
	<g:VerticalPanel ui:field="questionButtonVP">
			
			</g:VerticalPanel>
		<g:VerticalPanel spacing="5" ui:field="addQuestionHP">
		<g:HorizontalPanel spacing="8">
			<my:IconButton icon="plusthick" ui:field="addCheckListQuestionButton" styleName="{style.expbtn}"></my:IconButton>
			<my:IconButton icon="arrowthickstop-1-s" ui:field="importQuestionButton" styleName="{style.expbtn}"></my:IconButton>
		</g:HorizontalPanel>
		
		</g:VerticalPanel>
	</g:HorizontalPanel>
	</g:VerticalPanel>
</g:VerticalPanel>

</g:HTMLPanel>
</ui:UiBinder>
