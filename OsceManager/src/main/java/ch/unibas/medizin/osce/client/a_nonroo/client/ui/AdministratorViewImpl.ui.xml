<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	 xmlns:b="urn:import:com.google.gwt.user.cellview.client">
<ui:style src="../styles.css" />

<g:SplitLayoutPanel ui:field="splitLayoutPanel">
	<g:west size="500">
		<g:ScrollPanel>
			<g:HTMLPanel>
				<div class="{style.controls}">
					<b:SimplePager display="{table}" ui:field="pager" />
				</div>
				
				<b:CellTable ui:field="table" addStyleNames="{style.standardTable}"/>
				
				<div class="{style.controls}">
					<g:Button ui:field="newButton"><span class="ui-icon ui-icon-plusthick"></span></g:Button>
				</div>
			</g:HTMLPanel>
		</g:ScrollPanel>
	</g:west>
	<g:center>
		<g:ScrollPanel>
			<g:SimplePanel ui:field="detailsPanel"></g:SimplePanel>
		</g:ScrollPanel>
	</g:center>
</g:SplitLayoutPanel>
</ui:UiBinder> 