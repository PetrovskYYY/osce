<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:ch.unibas.medizin.osce.client.scaffold.ui'
  xmlns:a='urn:import:ch.unibas.medizin.osce.client.managed.ui'
  xmlns:my='urn:import:ch.unibas.medizin.osce.client.style.widgets'
  xmlns:b='urn:import:com.google.gwt.user.cellview.client'
  xmlns:n='urn:import:ch.unibas.medizin.osce.client.a_nonroo.client.ui.role'>



<ui:style src="../../styles.css" >
	.headerLabel
	{
		font-size: 16px;
		padding-bottom: 5px;
	}
	
.noOutline {
		outline-style: none;
		overflow: hidden;	
	}
.padleft5
	{
		vertical-align: top;
		padding-left: 3px;
		padding-bottom: 14px;
	}
	.standardTable input {
		width: 90%;
		opacity: 0.3;
	}
	
	.optionIcon
	{
		vertical-align: top;
		float: left;
		margin-left: 13px;
		margin-right: 5px;
	}	
	
	.addBtn
	{
		margin-left: 10px;
	}
	
	.icon
	{
		vertical-align: top;
		float: left;
		margin-bottom: 12px;
    	margin-right: 3px;		
	}
	
	.icon:hover {
		cursor: pointer;
	}
	
	.maxWidth {
		margin-bottom: 3px;
		
		border-radius: 16px;
		
		}
		
		.exp{
	
background-color: #DFDAD6;
border-bottom-color:#808080;
	border-top-left-radius: 16px;
	border-top-right-radius: 16px;

}

	.borderDP{
	
	border: 10;
}

	
	.right{
		
		float:right
	}
	.middle
	{
	float:inherit;
}
	.criteria{
	
		margin-left: 5px;
		margin-right: 5px;
	}
	.editQuestionBtn{
	
		margin-left: 100%;
		
	}
	.crtariaTop{
	
	margin-top: 5px;
}
.questionMaxWidth{
		max-width: 645px;
	}
</ui:style>
 <ui:with type="ch.unibas.medizin.osce.client.style.resources.UiIcons" field="uiIcons" ></ui:with>	
<g:HTMLPanel  addStyleNames="{style.questionMaxWidth}">
	<g:VerticalPanel ui:field="checkListQuestionItemVerticalPanel"   addStyleNames="{style.maxWidth}{style.questionMaxWidth}{style.tabStyle} {style.roleQuetion}" >
		
		
		
		<g:VerticalPanel ui:field="headerPanel" styleName="{style.exp}" verticalAlignment="middle">
	
				<g:HorizontalPanel>
				<g:AbsolutePanel ui:field="roleQueAP">
				<g:HorizontalPanel ui:field="roleQueHP">
	
		
			<g:VerticalPanel width="100%" verticalAlignment="middle">
			

 	
<g:HorizontalPanel spacing="5" >
		<g:VerticalPanel spacing="5" >
		<g:HorizontalPanel spacing="5" verticalAlignment="middle">
		<g:Image ui:field="arrow" styleName="{style.padleft5}" url="/osMaEntry/gwt/unibas/images/arrowdownselect.png"></g:Image>
		<g:Image  styleName="{style.icon}" resource="{uiIcons.question}"></g:Image>			
						
						<g:VerticalPanel>
						<g:Label addStyleNames="{style.headerLabel}" ui:field="questionItemLbl" width="500px"></g:Label>
							<g:Label ui:field="questionInstruction" ></g:Label>
						
		
						</g:VerticalPanel>
			<g:HorizontalPanel width="1px" horizontalAlignment="right" verticalAlignment="middle"  >
						<g:VerticalPanel ui:field="editQuestionVP">
						<my:IconButton ui:field="edit" icon="pencil" ></my:IconButton>
					</g:VerticalPanel>
				<g:VerticalPanel verticalAlignment="middle">
					<my:IconButton ui:field="delete" icon="trash" ></my:IconButton>
				</g:VerticalPanel>
					<g:Image ui:field="down" styleName="{style.icon}" resource="{uiIcons.triangle1South}"></g:Image>
			
			<g:Image ui:field="up" styleName="{style.icon} " resource="{uiIcons.triangle1North}"></g:Image>
	
			</g:HorizontalPanel>
		</g:HorizontalPanel>
					
						
	</g:VerticalPanel>
	</g:HorizontalPanel>
			</g:VerticalPanel>	
			
					</g:HorizontalPanel>
		</g:AbsolutePanel>
			</g:HorizontalPanel>
		
			</g:VerticalPanel>	
					<!--  <g:FlowPanel width="100px">-->
			
					
				
<!-- 					</g:FlowPanel> -->
				
			
			
			<!--move label  -->
			

			
			<!--Edit delete  -->
			

	<g:DisclosurePanel animationEnabled="true" open="true"
	styleName="{style.borderDP}" ui:field="checkListQuestionDisclosurePanel"
	width="100%">

	<g:VerticalPanel spacing="2" ui:field="addBtnPanel">
		
		<g:VerticalPanel ui:field="addOptionVerticalPanel" spacing="2">
			<g:HorizontalPanel spacing="2">
				<g:Image styleName="{style.optionIcon}" resource="{uiIcons.options}"></g:Image>
				<g:Label ui:field="optionLbl"></g:Label>
				<my:IconButton ui:field="addOptionButton" icon="plusthick" addStyleNames="{style.addBtn}" height="18px"></my:IconButton>
			</g:HorizontalPanel>

			<g:AbsolutePanel ui:field="optionBoundryPanel">
			<g:FlowPanel ui:field="optionVerticalPanel" addStyleNames="{style.criteria}" width="640px">
			
			</g:FlowPanel>
			</g:AbsolutePanel>
		</g:VerticalPanel>
	
		<g:VerticalPanel spacing="2">
			<g:HorizontalPanel spacing="2">
				<g:Image styleName="{style.optionIcon}" resource="{uiIcons.criteria}"></g:Image>
				<g:Label ui:field="criteriaLbl"></g:Label>
				<my:IconButton addStyleNames="{style.addBtn}" ui:field="addCriteriaButton" height="18px" icon="plusthick"></my:IconButton>
			</g:HorizontalPanel>

		<g:AbsolutePanel ui:field="criteriaBoundryPanel">
			<g:FlowPanel ui:field="criteriaHorizontalPanel" styleName="style.criteria"
				width="640px">
			</g:FlowPanel>
		</g:AbsolutePanel>
		</g:VerticalPanel>
		
	</g:VerticalPanel>
	</g:DisclosurePanel>
		

	</g:VerticalPanel>
	
</g:HTMLPanel>
</ui:UiBinder>
