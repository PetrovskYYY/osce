<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.google.gwt.user.cellview.client"
	xmlns:my="urn:import:ch.unibas.medizin.osce.client.style.widgets"
	xmlns:s="urn:import:ch.unibas.medizin.osce.client.scaffold.ui">

	<ui:style src="../../styles.css">
		.label {
			/* text-align: right; */
		}
		
		.buttonStyle {
			width: 100px;
		}
		
		.textBoxFieldStyle {
			text-align: center;
    		width: 22px;
		}
		
		.tableclass td {
			padding-right: 20px;
		}
		
	</ui:style>
	<g:HTMLPanel>
		<!-- h1>CircuitOsceSubView</h1 -->
		<table class="tableclass">
			<tr>
				<td><g:Label ui:field="shortBreakLabel" styleName="{style.label}"></g:Label></td>
				<td><s:ShortBox ui:field="shortBreakTextBox" styleName="{style.textBoxFieldStyle}"></s:ShortBox></td>
				<td><g:Label ui:field="longBreakLabel" styleName="{style.label}"></g:Label></td>
				<td><s:ShortBox ui:field="longBreakTextBox" styleName="{style.textBoxFieldStyle}"></s:ShortBox></td>
				<td><g:Label ui:field="launchBreakLabel" styleName="{style.label}"></g:Label></td>
				<td><s:ShortBox ui:field="launchBreakTextBox" styleName="{style.textBoxFieldStyle}"></s:ShortBox></td>				
				
				<!--  Module 5 bug Report Change -->
				<td><g:Label ui:field="middleBreakLabel" styleName="{style.label}"></g:Label></td>
				<td><s:ShortBox ui:field="middleBreakTextBox" styleName="{style.textBoxFieldStyle}"></s:ShortBox></td>
				<!--  E Module 5 bug Report Change -->
				
				<td>
				<g:HorizontalPanel spacing="4">
				<my:IconButton ui:field="saveOsce" addStyleNames="{style.buttonStyle}" icon="disk"></my:IconButton>
				</g:HorizontalPanel>								
				</td>
			</tr>
			<tr>
				<td><g:Label ui:field="maxStudentLabel"  styleName="{style.label}"></g:Label></td>
				<td><g:IntegerBox ui:field="maxStudentTextBox" styleName="{style.textBoxFieldStyle}"></g:IntegerBox></td>
				<td><g:Label ui:field="maxParcourLabel" styleName="{style.label}"></g:Label></td>
				<td><g:IntegerBox ui:field="maxParcourTextBox" styleName="{style.textBoxFieldStyle}"></g:IntegerBox></td>
				<td><g:Label ui:field="maxRoomsLabel" styleName="{style.label}"></g:Label></td>
				<td><g:IntegerBox ui:field="maxRoomsTextBox" styleName="{style.textBoxFieldStyle}"></g:IntegerBox></td>
					
				<!--  Module 5 bug Report Change -->
				<td><g:Label ui:field="shortBreakSimpatLabel" styleName="{style.label}"></g:Label></td>
				<td><s:ShortBox ui:field="shortBreakSimpatTextBox" styleName="{style.textBoxFieldStyle}"></s:ShortBox></td>
				<!--  E Module 5 bug Report Change -->
				<td>
					<g:HorizontalPanel spacing="4">
						<my:IconButton ui:field="generateBtn" addStyleNames="{style.buttonStyle}" icon="refresh"></my:IconButton>
						<my:IconButton ui:field="fixedBtn" addStyleNames="{style.buttonStyle}" icon="pin-s"></my:IconButton>				
						<my:IconButton ui:field="clearAllBtn" addStyleNames="{style.buttonStyle}" icon="cancel"></my:IconButton>
						<my:IconButton ui:field="closedBtn" addStyleNames="{style.buttonStyle}" icon="close"></my:IconButton>
					</g:HorizontalPanel>
				</td>			
			</tr>									
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 
