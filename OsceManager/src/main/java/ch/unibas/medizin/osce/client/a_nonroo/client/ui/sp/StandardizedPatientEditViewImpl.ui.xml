<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:ch.unibas.medizin.osce.client.scaffold.ui'
  xmlns:a='urn:import:ch.unibas.medizin.osce.client.managed.ui'
  xmlns:my='urn:import:ch.unibas.medizin.osce.client.style.widgets'
  xmlns:b='urn:import:com.google.gwt.user.cellview.client'>

<ui:style src="../../styles.css" />
 
  <g:HTMLPanel>
    <div class='{style.underline}'>    
      <h3 class='{style.header}' ui:field="editTitle"><ui:msg>Edit StandardizedPatient</ui:msg></h3>
      <h3 class='{style.header}' ui:field='createTitle'><ui:msg>New StandardizedPatient</ui:msg></h3>
    </div>
    
    <g:TabPanel ui:field="patientPanel" addStyleNames="gwt-InvertedTabPanel {style.tabStyle}">
		<g:Tab>
			<g:TabHTML></g:TabHTML>
			<g:HTMLPanel addStyleNames="{style.patientDetails}">
				
				<table>
					<colgroup>
						<col></col>
						<col></col>
					</colgroup>
					<tbody>
					<tr>
						<td><span class="{style.label}" ui:field="labelName" /></td>
						<td><g:TextBox ui:field='name'/></td>
					</tr>
					<tr>
						<td><span class="{style.label}" ui:field="labelPreName" /></td>
						<td><g:TextBox ui:field='preName'/></td>
					</tr>
					<tr id="street">
						<td><span class="{style.label}" ui:field="labelStreet" /></td>
						<td><g:TextBox ui:field='street'/></td>
					</tr>
					<tr id="city">
						<td><span class="{style.label}" ui:field="labelPLZCity" /></td>
						<td><g:IntegerBox ui:field='postalCode'/> <g:TextBox ui:field='city'/></td>
					</tr>
					<tr id="telephone">
						<td><span class="{style.label}" ui:field="labelTelephone" /></td>
						<td><g:TextBox ui:field='telephone'/></td>
					</tr>
					<tr id="mobile">
						<td><span class="{style.label}" ui:field="labelMobile" /></td>
						<td><g:TextBox ui:field='mobile'/></td>
					</tr>
					<tr id="email">
						<td><span class="{style.label}" ui:field="labelEmail" /></td>
						<td><g:TextBox ui:field='email'/></td>
					</tr>
					</tbody>
				</table>
			</g:HTMLPanel>
		</g:Tab>

		<g:Tab>
			<g:TabHTML></g:TabHTML>
			<g:HTMLPanel addStyleNames="{style.patientDetails}">
				<table>
					<colgroup>
						<col></col>
						<col></col>
					</colgroup>
					<tbody>
					<tr id="birthday">
						<td><span class="{style.label}" ui:field="labelBirthdate" /></td>
						<td><d:DateBox ui:field='birthday'/></td>
					</tr>
					<tr id="gender">
						<td><span class="{style.label}" ui:field="labelGender"></span></td>
						<td><g:ValueListBox ui:field="gender" /></td>
					</tr>
					<tr id="height">
						<td><span class="{style.label}" ui:field="labelHeight"></span>
						</td>
						<td><g:IntegerBox ui:field='height'/></td>
					</tr>
					<tr id="weight">
						<td><span class="{style.label}" ui:field="labelWeight"></span></td>
						<td><g:IntegerBox ui:field='weight'/></td>
					</tr>
					<tr id="profession">
						<td><span class="{style.label}" ui:field="labelProfession"></span></td>
						<td><g:ValueListBox ui:field='profession'/></td>
					</tr>
					<tr id="nationality">
						<td><span class="{style.label}" ui:field="labelNationality"></span></td>
						<td><g:ValueListBox ui:field='nationality'/></td>
					</tr>
					</tbody>
				</table>
			</g:HTMLPanel>
		</g:Tab>
		<g:Tab>
			<g:TabHTML></g:TabHTML>
			<g:SimplePanel>
				<g:HTMLPanel addStyleNames="{style.patientDetails}">
					<b:CellTable pageSize="8" ui:field="langTable" width="100%" addStyleNames="{style.standardTable}"/>
					<div class="{style.controls} {style.controlsleft}">
						<g:ValueListBox ui:field="languageBox" />
						<g:ValueListBox ui:field="langSkillBox" />
						<my:IconButton ui:field="langSkillAddButton" icon="plusthick"></my:IconButton>
						<b:SimplePager display="{langTable}" ui:field="pager" />
					</div>
				</g:HTMLPanel>
			</g:SimplePanel>
		</g:Tab>
		<g:Tab>
			<g:TabHTML></g:TabHTML>
			<g:HTMLPanel addStyleNames="{style.patientDetails}">
				<table>
					<colgroup>
						<col></col>
						<col></col>
					</colgroup>
					<tbody>
					<tr>
						<td><span class="{style.label}" ui:field="labelBankName" /></td>
						<td><span ui:field="bankName" /></td>
					</tr>
					<tr>
						<td><span class="{style.label}" ui:field="labelBankBIC" /></td>
						<td><span ui:field="bankBIC" /></td>
					</tr>
					<tr>
						<td><span class="{style.label}" ui:field="labelBankIBAN" /></td>
						<td><span ui:field="bankIBAN" /></td>
					</tr>
					</tbody>
				</table>
			</g:HTMLPanel>
		</g:Tab>
		
		<g:Tab>
			<g:TabHTML></g:TabHTML>
			<g:HTMLPanel addStyleNames="{style.patientDetails}">
				<p><span ui:field="description" /></p>
				<g:SimplePanel ui:field="descriptionPanel"></g:SimplePanel>
				<a:LangSkillSetEditor ui:field="langskills"></a:LangSkillSetEditor>
			</g:HTMLPanel>
		</g:Tab>
	</g:TabPanel>
    
    <div ui:field='errors' class='{style.errors}'></div>

    <table id='boundElementHolder' class="{style.fields}">
      <tr id='telephone2'><td><div class='{style.label}'>Telephone2:</div></td><td><g:TextBox ui:field='telephone2'/></td></tr>
      <tr id='bankaccount'><td><div class='{style.label}'>Bank Account:</div></td><td><g:ValueListBox ui:field='bankAccount'/></td></tr>
      <tr id='anamnesisForm'><td><div class='{style.label}'>Anamnesis Form:</div></td><td><g:ValueListBox ui:field='anamnesisForm'/></td></tr>
      
    </table>

    <div class='{style.bar}'>
      <g:Button addStyleNames='{style.button}' ui:field='save'>Save</g:Button>
      <g:Button addStyleNames='{style.button}' ui:field='cancel'>Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
