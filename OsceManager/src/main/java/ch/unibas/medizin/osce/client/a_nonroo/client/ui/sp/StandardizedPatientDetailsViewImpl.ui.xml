					</table>
				</g:HTMLPanel>
			</g:tab>
		</g:TabLayoutPanel>
		
		<g:TabLayoutPanel barUnit="PX" barHeight="28" addStyleNames="{style.tabStyle}">
			<g:tab>
			<g:header>ScarSubViewImpl</g:header>
				<n:StandardizedPatientScarSubViewImpl ui:field="standardizedPatientScarSubViewImpl"></n:StandardizedPatientScarSubViewImpl>
			</g:tab>
			
			<g:tab>
			<g:header>AnamnesisSubViewImpl</g:header>
				<g:SimplePanel></g:SimplePanel>
			</g:tab>
		</g:TabLayoutPanel>

	</g:HTMLPanel>
</ui:UiBinder>
