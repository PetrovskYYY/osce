<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:n="urn:import:ch.unibas.medizin.osce.client.a_nonroo.client.ui.sp"
	xmlns:my="urn:import:ch.unibas.medizin.osce.client.style.widgets">
	<ui:style src="../../styles.css">

.tabStyle {
	/*position: relative;*/
	margin: 8px auto;
	width: 98%;
}

.patientControls {
	height: 5%;
}
	</ui:style>
		
	<g:HTMLPanel>
					<div class="{style.patientControls} {style.controlsright}">
						<h3 class="{style.header}" style="display:inline"><span ui:field="displayRenderer"></span></h3>
						<my:IconButton ui:field="edit" icon="pencil">Edit</my:IconButton>
						<my:IconButton ui:field="delete" icon="trash">Delete</my:IconButton>
					</div>

		<g:TabPanel ui:field="patientPanel" addStyleNames="gwt-InvertedTabPanel {style.tabStyle}">
			<g:Tab>
				<g:TabHTML></g:TabHTML>
				<g:HTMLPanel addStyleNames="{style.patientDetails}">
					
					<table class="{style.fields}">
						<tr id="street">
							<td><span class="{style.label}" ui:field="labelStreet" /></td>
							<td><span ui:field="street" /></td>
						</tr>
						<tr id="city">
							<td><span class="{style.label}" ui:field="labelCity" /></td>
							<td><span ui:field="city" /></td>
						</tr>
						<tr id="postalCode">
							<td><span class="{style.label}" ui:field="labelPLZ" /></td>
							<td><span ui:field="postalCode" /></td>
						</tr>
						<tr id="telephone">
							<td><span class="{style.label}" ui:field="labelTelephone" /></td>
							<td><span ui:field="telephone" /></td>
						</tr>
						<tr id="mobile">
							<td><span class="{style.label}" ui:field="labelMobile" /></td>
							<td><span ui:field="mobile" /></td>
						</tr>
						<tr id="email">
							<td><span class="{style.label}" ui:field="labelEmail" /></td>
							<td><span ui:field="email" /></td>
						</tr>
					</table>
				</g:HTMLPanel>
			</g:Tab>

			<g:Tab>
				<g:TabHTML></g:TabHTML>
				<g:HTMLPanel addStyleNames="{style.patientDetails}">
					<table class="{style.fields}">
						<tr id="birthday">
							<td><span class="{style.label}" ui:field="labelBirthdate" /></td>
							<td><span ui:field="birthday" /></td>
						</tr>
						<tr id="gender">
							<td><span class="{style.label}">Gender:</span></td>
							<td><span ui:field="gender" /></td>
						</tr>
						<tr id="height">
							<td><span class="{style.label}">Height:</span>
							</td>
							<td><span ui:field="height" /></td>
						</tr>
						<tr id="weight">
							<td><span class="{style.label}">Weight:</span></td>
							<td><span ui:field="weight" /></td>
						</tr>
						<tr id="nationality">
							<td><span class="{style.label}">Nationality:</span></td>
							<td><span ui:field="nationality" /></td>
						</tr>
						<tr id="profession">
							<td><span class="{style.label}">Profession:</span></td>
							<td><span ui:field="profession" /></td>
						</tr>
						<tr id="langskills">
							<td><span class="{style.label}">Langskills:</span></td>
							<td><span ui:field="langskills" /></td>
						</tr>
						<tr id="descriptions">
							<td><span class="{style.label}">Description:</span></td>
							<td><span ui:field="descriptions" /></td>
						</tr>
						<tr id="anamnesisForm">
							<td><span class="{style.label}">Anamnesis Form:</span></td>
							<td><span ui:field="anamnesisForm" /></td>
						</tr>
					</table>
				</g:HTMLPanel>
			</g:Tab>
			<g:Tab>
				<g:TabHTML></g:TabHTML>
				<g:HTMLPanel addStyleNames="{style.patientDetails}">
					<table class="{style.fields}" id="boundElementHolder">
						<tr>
							<td><span class="{style.label}" ui:field="labelBankName" /></td>
							<td><span ui:field="bankName" /></td>
						</tr>
						<tr>
							<td><span class="{style.label}" ui:field="labelBankBIC" /></td>
							<td><span ui:field="bankBIC" /></td>
						</tr>
						<tr>
							<td><span class="{style.label}" ui:field="labelBankIBAN" /></td>
							<td><span ui:field="bankIBAN" /></td>
						</tr>
					</table>
				</g:HTMLPanel>
			</g:Tab>
		</g:TabPanel>
		
		<g:TabPanel ui:field="scarAnamnesisPanel" addStyleNames="{style.tabStyle}">
			<g:Tab>
			<g:TabHTML>ScarSubView</g:TabHTML>
				<n:StandardizedPatientScarSubViewImpl ui:field="standardizedPatientScarSubViewImpl"></n:StandardizedPatientScarSubViewImpl>
			</g:Tab>
			
			<g:Tab>
			<g:TabHTML>AnamnesisSubView</g:TabHTML>
				<g:SimplePanel></g:SimplePanel>
			</g:Tab>
		</g:TabPanel>
<!-- 	</div> -->
	</g:HTMLPanel>
</ui:UiBinder>
