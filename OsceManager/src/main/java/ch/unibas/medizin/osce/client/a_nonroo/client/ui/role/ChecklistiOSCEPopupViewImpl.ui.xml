<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:ch.unibas.medizin.osce.client.style.widgets">
	<ui:style src="../../styles.css" >
		
	</ui:style>
	
	
	
	<g:VerticalPanel spacing="3">
		<g:HTMLPanel>
			<div ui:field="arrowBorder"></div>
			<div ui:field="arrow"></div>
		</g:HTMLPanel>
	
		<g:HorizontalPanel spacing="3" verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="name" width="75px"></g:Label>
			<g:TextBox ui:field="nameTextBox" width="180px"></g:TextBox>
		</g:HorizontalPanel>
		
		<g:HorizontalPanel spacing="3" verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="description" width="75px"></g:Label>
			<g:TextArea ui:field="descriptionTextArea"></g:TextArea>
		</g:HorizontalPanel>
		
		<g:HorizontalPanel ui:field="itemTypeHp" spacing="3" verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="itemType" width="75px"></g:Label>
			<g:ValueListBox ui:field="itemTypeBox" width="185px"></g:ValueListBox>
		</g:HorizontalPanel>
		
		<g:HorizontalPanel ui:field="optionTypeHp" spacing="3" verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="optionType" width="75px"></g:Label>
			<g:ValueListBox ui:field="optionTypeBox" width="185px"></g:ValueListBox>
		</g:HorizontalPanel>
		
		<g:HorizontalPanel ui:field="isOverallQueHp" spacing="3" verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="isOverallQuestion"></g:Label>
			<g:CheckBox ui:field="isOverallQuestionChkBox"></g:CheckBox>
		</g:HorizontalPanel>
		
		<g:HorizontalPanel spacing="3" verticalAlignment="ALIGN_MIDDLE">
			<g:Label ui:field="topicFactorLbl" width="75px"></g:Label>
			<g:TextBox ui:field="topicFactorBox" width="180px"></g:TextBox>
		</g:HorizontalPanel>
		
		
		<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
			<g:HorizontalPanel spacing="3">
				<s:IconButton ui:field="saveBtn" icon="disk"></s:IconButton>
				<s:IconButton ui:field="cancelBtn" icon="closethick"></s:IconButton>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 